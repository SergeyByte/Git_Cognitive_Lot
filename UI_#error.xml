<?xml version="1.0" encoding="utf-8" ?>
<root>

<!-- Поля для просмотра -->

  <view>
    <rows>
      <row>
        <column fieldType="attribute" key="doc_RegCard/rc_Index/text_Регистрационный_номер" name="Регистрационный номер" valueType="text" />
        <column fieldType="attribute" key="doc_RegCard/rc_FlowKey" name="Поток" valueType="flow" />
      </row>
      <row>
        <column fieldType="field" key="|Document|Дата_регистрации" name="Дата регистрации" valueType="date" />
        <column fieldType="attribute" key="doc_Creator" name="Автор" valueType="addressbook" />
      </row>
	  <row>
		<column fieldType="field" key="|Document|Вид_служебной_записки" name="Вид служебной записки" valueType="text" />

      </row>
      <row>
        <column>
          <field fieldType="field" key="|Document|Кому|ИД_Кому" name="Кому" valueType="addressbook" />
        </column>
        <column>
          <field fieldType="field" key="|Document|От_кого|ИД_От_кого" name="От кого" valueType="addressbook" />
        </column>
      </row>
	  <row>
        <column>
          <field fieldType="field" key="|Document|Краткое_содержание" name="Краткое содержание" valueType="longtext" />
        </column>
      </row>
    </rows>
  </view>
  
  <!-- Поля для редактирования -->
  
  <edit>
    <rows>
      <row>
        <column>
          <field name="Регистрационный номер" isLabel="true" />
        </column>
      </row>
      <row>
        <column fieldType="field" key="|Document|Префикс_регномера" name="Префикс регномера" valueType="text" isValue="true" edit-name="prefix" edit-autocomplete="Prefix"/>

        <column fieldType="field" key="|Document|Число_регномера" name="Число регномера" valueType="text" isValue="true" edit-name="regnum" edit-disabled="true" />

        <column fieldType="field" key="|Document|Суффикс_регномера" name="Суффикс регномера" valueType="text" isValue="true" edit-name="Suffix" edit-autocomplete="Suffix"/>

      </row>
      <row>
        <column name="Дата регистрации" isLabel="true" />

      </row>
      <row>
        <column fieldType="field" key="|Document|Дата_регистрации" name="Дата регистрации" valueType="date" isValue="true" edit-name="registerDate" edit-required="true" edit-default-value="{today}" />

      </row>
	  <row>
	    <column name="Вид служебной записки" isLabel="true" />
      </row>
	  <row>
        <column fieldType="field" key="|Document|Вид_служебной_записки" name="Вид служебной записки" valueType="text" isValue="true" edit-name="SZType2" edit-required="false" edit-autocomplete="Вид служебной записки" />

      </row>
	  <row>
         <column name="Кому" isLabel="true" />
      </row>
      <row>
        <column fieldType="field" key="|Document|Кому|ИД_Кому" name="Кому" valueType="addressbook" isValue="true" edit-name="Who" edit-addressbook-groups="person" />

      </row>
      <row>
        <column name="От кого" isLabel="true" />

      </row>
      <row>
        <column fieldType="field" key="|Document|От_кого|ИД_От_кого" name="От кого" valueType="addressbook" isValue="true" edit-name="FromWho" edit-addressbook-groups="person" />
      </row>
	  <row>
        <column name="Краткое содержание" isLabel="true" />

      </row>
	  <row>
        <column fieldType="field" key="|Document|Краткое_содержание" name="Краткое содержание" valueType="longtext" isValue="true" edit-name="description" edit-hidden="false" edit-required="true" />

      </row>
      <row>
        <column fieldType="field" key="|Document|header" valueType="text" isValue="true" edit-name="document-header" edit-hidden="true" edit-value="Служебная записка" />
        <column fieldType="field" key="|Links|header" valueType="text" isValue="true" edit-name="links-header" edit-hidden="true" edit-value="Связки" />
        <column fieldType="field" key="|Control|header" valueType="text" isValue="true" edit-name="control-header" edit-hidden="true" edit-value="Контроль" />

      </row>
    </rows>
    <variables>
      <variable variable-name="regNumber" variable-format="{prefix}{number}{suffix}">
        <field fieldType="field" key="|Document|Префикс_регномера" name="Префикс регномера" valueType="text" variable-name="prefix" variable-format="{value}-" />
        <field fieldType="field" key="|Document|Число_регномера" name="Число регномера" valueType="text" variable-name="number" variable-format="{value}" />
        <field fieldType="field" key="|Document|Суффикс_регномера" name="Суффикс регномера" valueType="text" variable-name="suffix" variable-format="-{value}" />
      </variable>
    </variables>
  </edit>
</root>
